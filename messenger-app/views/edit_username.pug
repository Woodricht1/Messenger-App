html 
    head 
        title Edit Username
        link(rel = "icon", type = "image/png", href = "../messengerapplogo.png")
        link(rel = "stylesheet", type = "text/css", href = "../static/css/app.css")
    body 
        image(id="applogotext", src = "../static/branding/messengerapplogotext.png", alt = "Messanger App Logo", width=480, height=80)
        div(class = "credentials-block")
            div(id = "welcome") Welcome, #{username}.
            div(id = "welcome") Enter your new username below.
            form(action = "/edit_username" method = "POST")
                input(name = "username" type = "username" required placeholder = "Username")
                button(type = "Submit") UPDATE
            form(action = "/settings" method = "GET")
                button(type = "Submit") Go Back
            if (message)
                h4 #{message}